{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "module": "ES2020",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "pretty": false,
    "target": "ES2020",
    "types" : [
      "jest",
      "koa",
      "node",
      "node-polyglot",
      "react",
      "react-dom",
      "react-redux",
      "styled-components"
    ],
    "resolveJsonModule": true
  },
  "exclude": [
    "./.vscode",
    "./build",
    "./coverage",
    "./node_modules"
  ],
  "include": [
    "./*.js",
    "./config/**/*.js",
    "./scripts/**/*.js",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}
